<h1>아이디어 리스트</h1>

<table>
  <thead>
    <tr>
      <th>이름</th>
      <th>내용</th>
      <th>사진경로</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to '보기', idea %></td>
        <td><%= link_to '수정', edit_idea_path(idea) %></td>
        <td><%= link_to '삭제', idea, method: :delete, data: { confirm: '삭제하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

